<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: black;
        color: white;
      }
      a {
        color: white;
      }
      table {
        border-collapse: collapse;
        border: 2px solid white;
      }
      td {
        padding: 8px;
        border: 2px solid white;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <p>
      URL Generated:
      <a href="http://localhost:8001/url/<%= id %>" target="_blank"
        >http://localhost:8001/url/<%= id %></a
      >
    </p>
    <% } %>
    <div>
      <form method="post" action="/url">
        <label for="url-input">Enter your original url</label>
        <input
          id="url-input"
          action="POST"
          name="url"
          placeholder="www.example.com"
        />
        <button type="submit">Generate</button>
      </form>
    </div>
    <br />
    <div>
      <% if (locals.urls && locals.urls.length > 0) { %>
      <table>
        <tr>
          <td>S.No.</td>
          <td>ShortId</td>
          <td>Redirect</td>
          <td>Clicks</td>
          <td>Clickable link</td>
        </tr>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= url.shortId %></td>
          <td><%= url.redirectURL %></td>
          <td><%= url.visitHistory.length %></td>
          <td>
            <a href="http://localhost:8001/url/<%= url.shortId %>" target="_blank"
              >http://localhost:8001/url/<%= url.shortId %></a
            >
          </td>
        </tr>
        <% }) %>
      </table>
      <% } %>
    </div>
  </body>
</html>
